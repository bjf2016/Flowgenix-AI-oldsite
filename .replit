modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "bash start.sh"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Dev"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx astro dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Prod"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5001

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "astro dev --host 0.0.0.0 --port 5000"
waitForPort = 5000
