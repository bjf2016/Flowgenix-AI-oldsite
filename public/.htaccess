# Aggressive cache busting for deployment
<IfModule mod_headers.c>
    # No caching for HTML, CSS, and JS files
    <FilesMatch "\.(html|css|js)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
        Header set X-Deployment-Version "flowgenix-rebrand-june13-2025"
    </FilesMatch>
    
    # No caching for logo files during deployment
    <Files "flowgenix-ai-logo-sm.png">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </Files>
    
    # Deployment identification header
    Header always set X-Brand "Flowgenix-AI"
    Header always set X-Deployment-Status "ACTIVE"
</IfModule>

# Force HTTPS and ensure proper loading
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force reload with cache busting
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^(.*)$ /index.html?v=flowgenix-rebrand-2025&t=%{TIME} [L,QSA]
    
    # Ensure logo loads fresh
    RewriteCond %{REQUEST_URI} ^/flowgenix-ai-logo-sm\.png$
    RewriteRule ^(.*)$ /$1?v=flowgenix-rebrand-2025 [L,QSA]
</IfModule>