---
import { client, recentPostsQuery } from '../lib/sanity';
import BlogCard from './BlogCard.astro';

let recentPosts = [];
let hasError = false;

try {
  if (client) {
    recentPosts = await client.fetch(recentPostsQuery);
  } else {
    hasError = true;
  }
} catch (error) {
  console.error('Error fetching recent posts:', error);
  hasError = true;
  recentPosts = [];
}
---

{(recentPosts.length > 0 || hasError) && (
  <section class="py-16 bg-gradient-to-br from-secondary-50 to-primary-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-charcoal-900 mb-4">
          Latest Insights
        </h2>
        <p class="text-xl text-charcoal-600 max-w-3xl mx-auto">
          Stay ahead of the curve with our latest thoughts on AI innovation, business transformation, and emerging technologies.
        </p>
      </div>
      
      {recentPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {recentPosts.slice(0, 3).map((post) => (
            <BlogCard post={post} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <div class="max-w-md mx-auto">
            <svg class="mx-auto h-16 w-16 text-primary-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <h3 class="text-lg font-medium text-charcoal-900 mb-2">Blog Content Coming Soon</h3>
            <p class="text-charcoal-600">We're setting up our content management system. Check back soon for AI insights and industry updates.</p>
          </div>
        </div>
      )}
      
      <div class="text-center">
        <a 
          href="/blog" 
          class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
        >
          View All Articles
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
)}