---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCard from '../../components/BlogCard.astro';
import { client, blogPostsQuery, categoriesQuery } from '../../lib/sanity';

let posts = [];
let categories = [];
let hasError = false;

try {
  [posts, categories] = await Promise.all([
    client.fetch(blogPostsQuery),
    client.fetch(categoriesQuery)
  ]);
} catch (error) {
  console.error('Error fetching blog data:', error);
  hasError = true;
  posts = [];
  categories = [];
}

const title = 'Blog - Flowgenix AI';
const description = 'Expert insights on AI consulting, business automation, and digital transformation from the Flowgenix AI team.';
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="min-h-screen bg-white pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20 pt-32S">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-5xl font-bold mb-6">
            AI Insights & Innovation
          </h1>
          <p class="text-xl text-primary-100 max-w-3xl mx-auto">
            Discover the latest trends, strategies, and success stories in artificial intelligence and business transformation.
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Content -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {categories.length > 0 && (
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-charcoal-900 mb-6">Browse by Category</h2>
            <div class="flex flex-wrap gap-3">
              <a href="/blog" class="px-4 py-2 bg-primary-600 text-white rounded-full hover:bg-primary-700 transition-colors">
                All Posts
              </a>
              {categories.map((category) => (
                <a 
                  href={`/blog/category/${category.slug.current}`}
                  class="px-4 py-2 bg-secondary-100 text-charcoal-700 rounded-full hover:bg-secondary-200 transition-colors"
                >
                  {category.title}
                </a>
              ))}
            </div>
          </div>
        )}

        {posts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
              <BlogCard post={post} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="max-w-md mx-auto">
              <svg class="mx-auto h-16 w-16 text-primary-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              <h3 class="text-lg font-medium text-charcoal-900 mb-2">Blog Content Coming Soon</h3>
              <p class="text-charcoal-600 mb-4">We're setting up our content management system with Sanity CMS.</p>
              {hasError && (
                <div class="text-sm text-primary-600 bg-primary-50 rounded-lg p-4 mt-4">
                  <p class="font-medium mb-1">Ready to add content?</p>
                  <p>Check the sanity-setup.md file for step-by-step instructions to set up your blog content.</p>
                </div>
              )}
            </div>
          </div>
        )}
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>